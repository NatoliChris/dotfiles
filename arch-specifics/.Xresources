!===============================================================================
! XFT
!===============================================================================
xft*antialias:              true
xft*autohint:               false
xft*dpi:                    96
xft*hinting:                true
xft*hintstyle:              hintslight
xft*rgba:                   rgb
!===============================================================================

!===============================================================================
! URXVT settings
!===============================================================================
urxvt.background:           base00
urxvt.blurRadius:           10
urxvt.borderless:           true
urxvt.cursorBlink:          true
urxvt.depth:                32
urxvt.externalBorder:       0
urxvt.internalBorder:       10
urxvt.fading:               false
urxvt.fadeColor:            base00
urxvt.iso14755:             false
urxvt.iso14755_52:          false
urxvt.lineSpace:            -1
urxvt.letterSpace:          -2
urxvt.saveLines:            65535
urxvt.scrollBar:            false
urxvt.scrollBar_right:      true
urxvt.scrollBar_floating:   true
urxvt.scrollstyle:          plain
urxvt.shading:              35
urxvt.tintcolor:            #FF0000
urxvt.transparent:          true
urxvt.urgentOnBell:         false
urxvt.visualBell:           false
!===============================================================================

Xcursor.size: 16

urxvt.perl-ext-common:	font-size
urxvt.keysym.M-equal:	font-size:reset
urxvt.keysym.M-minus:	font-size:decsave
urxvt.keysym.M-plus:	font-size:incsave

!*.font:                     xft:Anonymous Pro:size=12:dpi=96
*.font:                     xft:Fantasque Sans Mono:size=13:dpi=96
!*.font:                     xft:Inconsolata-g:size=11:dpi=96
